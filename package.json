{
  "name": "pnp-platform",
  "version": "1.0.0",
  "description": "platform for sharing indie boardgames",
  "main": "app.js",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\"",
    "lite": "lite-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chantun/PnPplatform.git"
  },
  "keywords": [
    "print",
    "play",
    "platform",
    "board",
    "game",
    "santiago"
  ],
  "author": "Santiago F. Rey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Chantun/PnPplatform/issues"
  },
  "homepage": "https://github.com/Chantun/PnPplatform#readme",
  "devDependencies": {
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "font-awesome": "^4.7.0"
  }
}
